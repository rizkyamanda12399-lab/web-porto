{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",        // ✅ modern replacement for "node"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node"],
    // "baseUrl": ".",                       // masih bisa dipakai sementara
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ignoreDeprecations": "6.0",            // ⬅️ tambahkan di sini
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    "custom.d.ts",
    "src/global.d.ts"
  ],
  "exclude": ["node_modules"]
}
